<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bob.bobmobileapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".BOBApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MaterialDrawerTheme.TranslucentStatus">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCp_neipH5fKcRawIw6No7H9155r8qy-4c"/>
        <activity android:name=".activities.LoadingActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.bob.bobmobileapp.fragments.Map"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name=".activities.MapsActivity"
            android:label="@string/title_activity_maps"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:theme="@android:style/Theme.Dialog">
        </activity>
        <activity
            android:name=".activities.MapActivity"
            android:label="@string/title_activity_maps"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:theme="@android:style/Theme.Dialog">
        </activity>
    </application>

</manifest>